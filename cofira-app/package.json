{
  "name": "cofira-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage --no-watch --browsers=ChromeHeadless",
    "test:watch": "ng test --code-coverage",
    "lint": "ng lint",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "api": "node server.js",
    "api:simple": "json-server --watch db.json --port 3000",
    "dev": "concurrently \"npm run api\" \"npm start\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@types/three": "^0.182.0",
    "bcryptjs": "^3.0.3",
    "browserslist": "^4.28.1",
    "chart.js": "^4.5.1",
    "gsap": "^3.14.2",
    "jsonwebtoken": "^9.0.3",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.0",
    "three": "^0.182.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.12",
    "@angular/cli": "^20.3.12",
    "@angular/compiler-cli": "^20.3.0",
    "@playwright/test": "^1.58.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jasmine": "~5.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "angular-eslint": "21.2.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "jasmine-core": "~5.9.0",
    "json-server": "^1.0.0-beta.3",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.2.0",
    "playwright": "^1.57.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.54.0"
  }
}
